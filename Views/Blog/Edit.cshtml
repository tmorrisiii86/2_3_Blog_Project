@model DailyBlogger.Models.BlogPost
@{
    ViewData["Title"] = "Edit Post";
    Layout = "_layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h2>Edit</h2>
    <h4>BlogPost</h4>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="blog_title" class="control-label"></label>
                    <input asp-for="blog_title" class="form-control" />
                    <span asp-validation-for="blog_title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="content" class="control-label"></label>
                    @Html.TextAreaFor(m => m.content, 10, 10, new {@class = "form-control"})

                    <span asp-validation-for="content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="blog_date" class="control-label"></label>
                    <input asp-for="blog_date" class="form-control" />
                    <span asp-validation-for="blog_date" class="text-danger"></span>
                </div>
                @Html.HiddenFor(m => m.blog_id)
                <div class="form-group">
                    <input type="submit" value="Post Blog" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
